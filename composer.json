{
    "name": "tflori/secure-token",
    "description": "Library to generate tokens of arbitrary precision",
    "license": "MIT",
    "require": {
        "php": ">=5.3",
        "ext-bcmath": "*",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "SecureToken\\": "SecureToken/",
            "SecureToken\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6|^4.8",
        "squizlabs/php_codesniffer": "^3.3|^2.9",
        "php-coveralls/php-coveralls": "^2.1|^1.1"
    },
    "scripts": {
        "code-style": "phpcs --standard=PSR2 SecureToken && phpcs --standard=PSR2 --ignore=example tests"
    }
}
